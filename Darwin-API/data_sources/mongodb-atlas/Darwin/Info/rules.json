{
    "collection": "Info",
    "database": "Darwin",
    "roles": [
        {
            "name": "readOwnWriteOwn",
            "apply_when": {},
            "document_filters": {
                "write": {
                    "owner_id": "%%user.id"
                },
                "read": {
                    "owner_id": "%%user.id"
                }
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true
        },
        {
            "name": "OnlyFields",
            "apply_when": {},
            "document_filters": {
                "write": {},
                "read": {}
            },
            "fields": {
                "first_name": {
                    "write": false,
                    "read": true
                },
                "last_name": {
                    "write": false,
                    "read": true
                }
            },
            "search": true
        }
    ]
}
