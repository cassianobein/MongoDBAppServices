{
    "collection": "Info",
    "database": "Darwin",
    "filters": [
        {
            "name": "FilterbyUserID",
            "query": {
                "owner_id": "%%user.id"
            },
            "projection": {
                "orders": {
                    "$numberInt": "0"
                },
                "spent": {
                    "$numberInt": "0"
                }
            },
            "apply_when": {
                "%%true": true
            }
        }
    ],
    "roles": [
        {
            "name": "readOwnWriteOwn",
            "apply_when": {},
            "document_filters": {
                "write": {
                    "owner_id": "%%user.id"
                },
                "read": {
                    "owner_id": "%%user.id"
                }
            },
            "fields": {
                "first_name": {
                    "write": false,
                    "read": true
                },
                "last_name": {
                    "write": false,
                    "read": true
                }
            },
            "insert": true,
            "delete": true,
            "search": true
        }
    ]
}
